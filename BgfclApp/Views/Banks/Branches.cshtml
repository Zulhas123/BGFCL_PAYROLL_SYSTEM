
@{
    ViewData["Title"] = "Branches";
}
@section Styles {
    <link rel="stylesheet" href="~/css/banks/branches.css" />
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Top right aligned controls -->
                <div class="card border shadow-sm p-1">
                    <div class="d-flex justify-content-between align-items-center gap-2">
                        <h4 class="mb-0 mr-1">Branch Management</h4>
                        <div class="d-flex">
                            <select id="page_length_select" class="form-control w-auto me-3 mr-1">
                                <option value="10">10 rows</option>
                                <option value="20">20 rows</option>
                                <option value="30">30 rows</option>
                                <option value="40">40 rows</option>
                                <option value="50">50 rows</option>
                            </select> 
                            <button type="button" class="btn btn-info" id="add_button"><i class="fas fa-plus me-1"></i> Add Branch</button>
                        </div>
                    </div>
                </div>
                <!-- DataTable -->
                <table class="table table-hover table-bordered" id="branch_list_table">
                    <thead>
                        <tr>
                            <th>Sl.</th>
                            <th>Branch Name</th>
                            <th>Bank Name</th>
                            <th>Routing Number</th>
                            <th>Address</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Branch Form Modal -->
<div class="modal fade" id="branch_modal" tabindex="-1" aria-labelledby="branchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border border-info">
                <h5 class="modal-title" id="branchModalLabel">Add Branch</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="branchForm">
                    <input type="hidden" value="" id="BranchId" />
                    <input type="hidden" value="create" id="operation_type" />
                    <div class="form-group">
                        <label for="BankId">Bank <span class="text-danger" title="required">*</span></label>
                        <select class="form-control" id="BankId"></select>
                        <p id="BankIdError" class="text-danger error-item"></p>
                    </div>
                    <div class="form-group">
                        <label for="BranchName">Branch Name <span class="text-danger" title="required">*</span></label>
                        <input type="text" class="form-control" id="BranchName">
                        <p id="BranchNameError" class="text-danger error-item"></p>
                    </div>
                    <div class="form-group">
                        <label for="RoutingNumber">Routing Number</label>
                        <input type="text" class="form-control" id="RoutingNumber">
                    </div>
                    <div class="form-group">
                        <label for="Address">Address</label>
                        <textarea class="form-control" id="Address" rows="3"></textarea>
                    </div>
                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-outline-danger px-3" id="cancel_button">Cancel</button>
                        <button type="button" class="btn btn-success px-3 fw-bold" id="submit_button">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/banks/branches.js"></script>
    <style>
        #branch_list_table tbody tr {
            height: 20px;
            line-height: 20px;
        }

        #branch_list_table tbody td {
            padding: .5 4px;
            overflow: hidden; /* Hide overflow content */
            white-space: nowrap; /* Prevent text wrapping */
            text-overflow: ellipsis; /* Add ellipsis for overflowing text */
        }
    </style>
}
