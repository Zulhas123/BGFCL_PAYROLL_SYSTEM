@{
    ViewData["Title"] = "Process Bonus";
}
@section Styles {
    <link rel="stylesheet" href="~/css/bonusprocess/bonusprocess.css" />
}

<!-- /Page Header -->
<div class="row">
    <div class="col-4">
        <div class="card border">
            <div class="card-body">
                <!-- Header for the form with border -->
                <h3 class="card-title header-border border-bottom">Bonus Process</h3>
                <form >
                    <div class="form-group">
                        <label for="month">Month</label>
                        <select class="form-control" id="months"></select>
                    </div>
                    <div class="form-group">
                        <label for="year">Year</label>
                        <select class="form-control" id="years"></select>
                    </div>
                    <div class="form-group">
                        <label for="BonusId">Bonus <span class="text-danger" title="required">*</span></label>
                        <select class="form-control" id="BonusId"></select>
                        <p id="BonusIdError" class="text-danger error-item"></p>
                    </div>
                    <div class="form-group">
                        <label for="EmployeeTypeId">Employee Type <span class="text-danger" title="required">*</span></label>
                        <select class="form-control" id="EmployeeTypeId"></select>
                        <p id="EmployeeTypeIdError" class="text-danger error-item"></p>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <!-- Wrap the content inside a <form> tag -->
    <form id="bonus_form" action="#" method="post">
        <div class="card border border-1 shadow-sm p-1" style="max-width: 400px;">
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-12">
                        <input class="form-check-input" type="checkbox" id="festival_checkbox">
                        <label class="form-check-label d-block" for="festival_checkbox">Festival Bonus</label>
                        <input class="inputfield" type="number" id="festival_basic" required /> % of Basic
                    </div>
                    <div class="form-group col-12 d-flex">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="checkbox" id="muslim_checkbox">
                            <label class="form-check-label" for="muslim_checkbox">Muslim</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="checkbox" id="hindu_checkbox">
                            <label class="form-check-label" for="hindu_checkbox">Hindu</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="checkbox" id="buddist_checkbox">
                            <label class="form-check-label" for="buddist_checkbox">Buddist</label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="checkbox" id="christian_checkbox">
                            <label class="form-check-label" for="christian_checkbox">Christian</label>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <input class="form-check-input" type="checkbox" id="incentive_checkbox">
                        <label class="form-check-label d-block" for="incentive_checkbox">Incentive Bonus</label>
                        <input class="inputfield" type="number" id="incentive_basic" /> % of Basic
                    </div>
                    <div class="form-group col-12">
                        <input class="form-check-input" type="checkbox" id="honorarium_checkbox">
                        <label class="form-check-label d-block" for="honorarium_checkbox">Honorarium Bonus</label>
                        <input class="inputfield" type="number" id="honorarium_basic" /> % of Basic
                    </div>
                    <div class="form-group col-12">
                        <input class="form-check-input" type="checkbox" id="scholarship_checkbox">
                        <label class="form-check-label d-block" for="scholarship_checkbox">Scholarship Bonus</label>
                        <input class="inputfield" type="number" id="scholarship_basic" /> % of Basic
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <input type="file" id="excelFileInput" class="form-control-file me-2" />
                        <button type="submit" class="btn btn-primary btn-sm mb-2" id="process_button">Process</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

