@{
    ViewData["Title"] = "Bonus Sheet";
}
@section Styles {
    <link rel="stylesheet" href="~/css/bonus/bonusSheet.css" />
}

<div class="row mt-1 mb-1">
    <div class="col-lg-6">
        <form method="post" asp-action="GetBonusSheet"
              class="bg-white rounded border shadow-sm p-1"
              style="min-height: 200px;">
            <div class="m-2 text-center">
                <h1 class="h4 font-weight-bold text-dark border-bottom pb-2">Bonus Sheet Report</h1>
            </div>

            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="months">Month</label>
                        <select class="form-control form-control-sm" id="months" name="month"></select>
                    </div>

                    <div class="form-group">
                        <label for="BonusId">Bonus <span class="text-danger">*</span></label>
                        <select class="form-control form-control-sm" id="BonusId" name="bonusId"></select>
                        <small id="BonusIdError" class="text-danger">@ViewBag.bonusError</small>
                    </div>

                    <div class="form-group">
                        <label for="ReportType">Report Type <span class="text-danger">*</span></label>
                        <select class="form-control form-control-sm" id="ReportType" name="reportType" required>
                            <option value="">Select One</option>
                            <option value="1">Office Copy</option>
                            <option value="2">Bank Copy</option>
                        </select>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="years">Year</label>
                        <select class="form-control form-control-sm" id="years" name="year"></select>
                    </div>

                    <div class="form-group">
                        <label for="EmployeeTypeId">Employee Type <span class="text-danger">*</span></label>
                        <select class="form-control form-control-sm" id="EmployeeTypeId" name="employeeTypeId"></select>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-between">
                        <div class="form-check m-0">
                            <input type="checkbox" class="form-check-input" id="isExcel" name="isExcel">
                            <label class="form-check-label" for="isExcel">Export as Excel?</label>
                        </div>
                        <button type="submit" id="generateButton" formtarget="_blank" class="btn btn-success btn-sm" style="font-size: 12px; padding: 4px 8px;">
                            Report To PDF
                        </button>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

