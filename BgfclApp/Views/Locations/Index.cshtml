<!-- Location Form Modal -->
<div class="modal fade" id="location_modal" tabindex="-1" aria-labelledby="locationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="locationModalLabel">Add Location</h5>
                <button type="button" class="btn-close ms-auto larger-close-button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="locationForm">
                    <input type="hidden" value="" id="LocationId" />
                    <input type="hidden" value="create" id="operation_type" />
                    <div class="form-group">
                        <label for="LocationName">Location Name <span class="text-danger" title="required">*</span></label>
                        <input type="text" class="form-control" id="LocationName">
                        <p id="LocationNameError" class="text-danger error-item"></p>
                    </div>
                    <div class="form-group">
                        <div class="d-flex align-items-center">
                            <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" style="margin-left: .5rem; margin-right: .5rem;">
                            <label for="IsActive" class="mb-0" style="margin-left: 2rem;">Is Active</label>
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <button type="button" class="btn btn-danger" id="cancel_button">Cancel</button>
                        <button type="button" class="btn btn-success text-dark" id="submit_button">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

