@{
    ViewData["Title"] = "Provident Fund";
}
@section Styles {
    <link rel="stylesheet" href="~/css/PfGratuity/pfgratuity.css" />
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- Top right aligned controls -->
                <div class="card border shadow-sm p-1">
                    <div class="d-flex justify-content-between align-items-center gap-2">
                        <h4 class="mb-0 mr-1">Provident Fund Management</h4>
                        <div class="d-flex">
                            <button type="button" class="btn btn-info" id="add_button"><i class="fas fa-plus me-1"></i> Set Provident Fund</button>
                        </div>
                    </div>
                </div>
                <!-- DataTable -->
                <div style ="overflow-x: auto;">
                    <table class="table table-hover table-bordered display nowrap" id="Provident_list_table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sl.</th>
                                <th>JobCode</th>
                                <th>EmployeeName</th>
                                <th>EmpOpeningCont.</th>
                                <th>EmpCurrentYearCont.</th>
                                <th>Com.OpeningCont.</th>
                                <th>Com.CurrentYearCont.</th>
                                <th>InterestAsOpening</th>
                                <th>InterestAsEnding</th>
                                <th>InterestAsYear</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>

<!-- Branch Form Modal -->
<div class="modal fade" id="provident_modal" tabindex="-1" aria-labelledby="providentModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width: 1000px;">
        <div class="modal-content">
            <div class="modal-header border border-info">
                <h5 class="modal-title" id="providentModalLabel">Provident fund</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="providentForm">
                    <input type="hidden" value="" id="ProvidentId" />
                    <input type="hidden" value="create" id="operation_type" />
                    <input type="hidden" id="EmpSubTotal" name="EmpSubTotal" />
                    <input type="hidden" id="CompanySubTotal" name="CompanySubTotal" />
                    <input type="hidden" id="TotalContribution" name="TotalContribution" />
                    <input type="hidden" id="GrandTotal" name="GrandTotal" />

                    <div class="row">
                       
                        <div class="form-group col-md-6">
                            <label for="EmpOpeningContribution">Emp.Opening Cont.</label>
                            <input type="number" class="form-control" id="EmpOpeningContribution">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="EmpEndingContribution">Emp.Ending Cont.</label>
                            <input type="number" class="form-control" id="EmpEndingContribution" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="CompanyOpeningContribution">Com.Opening Cont.</label>
                            <input type="number" class="form-control" id="CompanyOpeningContribution">
                        </div>

                        <div class="form-group col-md-6">
                            <label for="CompanyEndingContribution">Com.Ending Cont.</label>
                            <input type="number" class="form-control" id="CompanyEndingContribution" readonly>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="InterestRate">Interest Rate</label>
                            <input type="number" class="form-control" id="InterestRate">
                        </div>
                         <div class="form-group col-md-6">
                            <label for="InterestAsOpening">Opening Interest</label>
                            <input type="number" class="form-control" id="InterestAsOpening" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InterestAsEnding">Ending Interest</label>
                            <input type="number" class="form-control" id="InterestAsEnding" readonly>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InterestAsYear">Interest As Year</label>
                            <input type="number" class="form-control" id="InterestAsYear" name="InterestAsYear" readonly>
                        </div>

                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between mt-3">
                        <button type="button" class="btn btn-outline-danger px-3" id="cancel_button">Cancel</button>
                        <button type="button" class="btn btn-success px-3 fw-bold" id="submit_button">Create</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/PfGratuity/pfgratuity.js"></script>
}
